<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <TextView
        android:id="@+id/tv_sales_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_large"
        android:text="客户列表"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        android:background="@color/gray"/>
    <ListView
        android:id="@+id/lv_sales_custom_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_sales_title"
        android:layout_above="@+id/btn_sales_add_custom">
    </ListView>

    <Button
        android:id="@+id/btn_sales_add_custom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_normal"
        android:layout_margin="@dimen/margin_large"
        android:background="@drawable/button_shape"
        android:text="添加新客户"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
