<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_vist_log_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        android:text="广州市环保局"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/com_10dp"
        android:layout_marginBottom="@dimen/com_10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@color/main_color_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_big"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big">
        <TextView
            android:id="@+id/tv_item_vist_log_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="地址："
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_item_vist_log_to_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_to_location"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@color/main_color_light" />

    <TextView
        android:id="@+id/tv_item_vist_log_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_normal"
        android:text="拜访广州市环保局局长"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/com_10dp"
        android:layout_marginBottom="@dimen/com_10dp"/>
</LinearLayout>
