<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_wifi_type_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="个人"
        android:background="@color/powderblue"
        android:layout_marginTop="@dimen/com_5dp"
        android:layout_marginRight="@dimen/com_5dp"
        android:layout_marginLeft="@dimen/com_5dp"/>

    <Button
        android:id="@+id/btn_wifi_type_merchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="商家"
        android:background="@color/powderblue"
        android:layout_marginTop="@dimen/com_5dp"
        android:layout_marginRight="@dimen/com_5dp"
        android:layout_marginLeft="@dimen/com_5dp"/>"
    <Button
        android:id="@+id/btn_wifi_type_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="单位"
        android:background="@color/powderblue"
        android:layout_marginTop="@dimen/com_5dp"
        android:layout_marginBottom="@dimen/com_5dp"
        android:layout_marginRight="@dimen/com_5dp"
        android:layout_marginLeft="@dimen/com_5dp"/>"
</LinearLayout>
