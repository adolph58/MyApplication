<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_background"
        android:scrollbars="none"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/main_color_light">
                <cn.adolphc.mywifi.ui.CircleImageView
                    android:id="@+id/iv_mine_head_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/default_avatar" />
                <TextView
                    android:id="@+id/tv_mine_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_below="@+id/iv_mine_head_image"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="昵称"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout 
                android:id="@+id/rl_mine_activity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_activity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/activity_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="活动"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_activity"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_mine_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_card"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/card_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_card"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="我的卡券"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_card"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/rl_mine_expense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_expense"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/expense_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="我的消费"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_expense"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/rl_mine_income"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_income"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/income_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_income"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="我的收入"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_income"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/rl_mine_count"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/count_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="账户"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_count"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/rl_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_mine_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/setting_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_mine_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="设置"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_big"
                    android:layout_toRightOf="@id/iv_mine_setting"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mine_background"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>